{
  "name": "bill-music-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "author": {
    "name": "zitont",
    "email": "1456492197@qq.com"
  },
  "license": "MIT",
  "repository": {},
  "build": {
    "appId": "bili.music",
    "directories": {
      "output": "build"
    },
    "buildVersion": "1.0.0",
    "electronVersion": "19.0.2",
    "extraResources":  {
      "from": "./data/",
      "to": "data"
  }
  },
  "win": {
    "icon": "./imgs/icon.ico",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "installerIcon": "imgs/icon.ico",
    "uninstallerIcon": "imgs/icon.ico",
    "uninstallDisplayName": "卸载这个软件",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "deleteAppDataOnUninstall": true,
    "include": "./build/script/installer.nsh"
  },
  "scripts": {
    "dev": "vite",
    "build:vite": "vue-tsc && vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "electron-forge:start": "electron-forge start",
    "electron-forge:package": "electron-forge package",
    "electron-forge:make": "electron-forge make",
    "electron:start": "nodemon --exec electron . --watch ./ --ext .js,.html,.css,.vue",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^10.9.0",
    "@vueuse/integrations": "^10.9.0",
    "element-plus": "^2.6.0",
    "express": "^4.19.2",
    "pinia": "^2.1.7",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6",
    "vue": "^3.4.19",
    "vue-router": "^4.0.13"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@types/node": "^20.11.24",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.8",
    "nodemon": "^3.1.0",
    "sass": "^1.71.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vue-tsc": "^1.8.27",
    "vuepress-plugin-components": "^2.0.0-rc.31"
  }
}
